# Pinterest Integration
# Get these from https://developers.pinterest.com/apps/
PINTEREST_CLIENT_ID=your_client_id_here
PINTEREST_CLIENT_SECRET=your_client_secret_here

# For local development
PINTEREST_REDIRECT_URI=http://localhost:3000/api/pinterest/callback

# For production (update when deploying)
# PINTEREST_REDIRECT_URI=https://yourdomain.com/api/pinterest/callback

# Optional: Email notifications
NOTIFY_TO_EMAIL=you@yourdomain.com

# Staging Environment Protection
# Add these to Vercel Environment Variables for Preview deployments
STAGING_PROTECT_USERNAME=preview
STAGING_PROTECT_PASSWORD=lovevioletarose

# Site Environment (used for staging badge)
# Values: "development" | "staging" | "production"
NEXT_PUBLIC_SITE_ENV=development
