# Pinterest Integration
# Get these from https://developers.pinterest.com/apps/
PINTEREST_CLIENT_ID=your_client_id_here
PINTEREST_CLIENT_SECRET=your_client_secret_here

# For local development
PINTEREST_REDIRECT_URI=http://localhost:3000/api/pinterest/callback

# For production (update when deploying)
# PINTEREST_REDIRECT_URI=https://yourdomain.com/api/pinterest/callback

# Resend Email Service (for consultation form submissions)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_TO_EMAIL=you@yourdomain.com

# n8n Webhook Integration (for automated wedding inquiry workflow)
# Get your webhook URL from your n8n instance (Webhook node > Production URL)
# This sends consultation form data to n8n for:
# - Airtable record creation
# - AI-drafted email responses
# - Slack notifications
# - Automated follow-up workflows
N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/wedding-inquiry

# Staging Environment Protection (Optional - currently disabled in middleware.ts)
# Add these to Vercel Environment Variables for Preview deployments if you want password protection
STAGING_PROTECT_USERNAME=your_username_here
STAGING_PROTECT_PASSWORD=lvr2025

# Site Environment (used for staging badge)
# Values: "development" | "staging" | "production"
NEXT_PUBLIC_SITE_ENV=development

# Google Analytics 4
# Get your measurement ID from https://analytics.google.com
# Format: G-XXXXXXXXXX
# Account: Michael Andrade Studio – Analytics
# Property: michael-andrade.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-CWZ8Q1MPE3

# Meta Pixel (Facebook/Instagram Ads)
# Get your pixel ID from https://business.facebook.com/events_manager
# Format: 1234567890123456 (numeric string)
NEXT_PUBLIC_META_PIXEL_ID=your_pixel_id_here

# Cloudflare Turnstile (CAPTCHA - Bot Protection)
# Get your keys from https://dash.cloudflare.com/ > Turnstile
# Create a widget with "Managed" mode for best user experience
# ⚠️ CRITICAL: Add your production domain(s) to the allowed list in Cloudflare!
# Test key (1x00000000000000000000AA) ONLY works on localhost
# Public site key (safe to expose in frontend code)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
# Secret key (server-side only - NEVER expose to client)
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# =============================================================================
# CRM & Database Configuration (Supabase)
# =============================================================================

# Supabase Project URL (get from Supabase Dashboard → Settings → API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (public key, safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (private key, server-side only)
# ⚠️ NEVER expose this key in client-side code!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Cron Job Security
# =============================================================================

# Secret key to authenticate cron job requests (generate a random string)
CRON_SECRET=your-random-secret-string-here

# =============================================================================
# Stripe Payment Processing
# =============================================================================

# Stripe Secret Key (get from https://dashboard.stripe.com/apikeys)
# ⚠️ NEVER expose this key in client-side code!
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Publishable Key (public key, safe for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Webhook Secret (for verifying webhook events)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Site URL (for Stripe redirect URLs)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
